<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/logintext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_background"
            android:padding="20dp"
            android:text="로그인"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/loginActivity_editText_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_edit_background"
                android:ems="12"
                android:hint="    아이디(전화번호)"
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/loginActivity_editText_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="-11dp"
                android:ems="12"
                android:background="@drawable/login_edit_background"
                android:textSize="15dp"
                android:hint="    비밀번호"
                android:inputType="textPassword" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginActivity_button_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_background"
            android:text="Login"
            android:textColor="@color/black"
            android:fontFamily="@font/kcc"
            android:textSize="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginActivity_button_signup"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>

</FrameLayout>