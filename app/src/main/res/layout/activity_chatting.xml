<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/chattingActivity_button_block"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:background="@android:drawable/ic_menu_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/chattingActivity_button_gallery"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:iconPadding="20dp"/>

        <EditText
            android:id="@+id/chattingActivity_editText_chatbar"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="메세지를 입력해 주세요." />

        <Button
            android:id="@+id/chattingActivity_button_send"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@android:drawable/ic_menu_send"/>

    </LinearLayout>
</LinearLayout>