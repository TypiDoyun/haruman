<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chattingActivity_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/chattingActivity_chatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E4E4E4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/chattingActivity_button_gallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_gallery"
            app:iconPadding="20dp" />

        <EditText
            android:id="@+id/chattingActivity_editText_chatbar"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="메세지를 입력해 주세요." />

        <Button
            android:id="@+id/chattingActivity_button_send"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:drawable/ic_menu_send"/>

    </LinearLayout>
</LinearLayout>